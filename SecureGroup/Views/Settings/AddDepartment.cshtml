@model SecureGroup.ViewModel.DepartmentViewModel

@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="common-title-headeer">
    <h1>Add Department</h1>

    <ul class="addbtns">
        <li>
            <button class="header-add-btn"><i class="fa fa-arrow-left" aria-hidden="true"></i><a asp-action="DepartmentList">Department List</a></button>
        </li>
    </ul>
</div>



<div class="form-inner">
    <form asp-action="AddDepartment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
           @* <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="DepartmentId" class="control-label"></label>
                    <input asp-for="DepartmentId" class="form-control" />
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>*@
            <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="DepartmentName" class="control-label">Department Name<span>*</span></label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="DepartmentHead" class="control-label">Department Head<span>*</span></label>
                    <select asp-for="DepartmentHead" id="ddlDepartmentHead"
                            class="form-control"
                            asp-items="@(new SelectList(Model.UserList,"Value", "Text"))">
                    </select>
                    <span asp-validation-for="DepartmentHead" class="text-danger"></span>
                </div>
            </div>           

            <input type="submit" value="Create" class="data-save-btn" />

        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
