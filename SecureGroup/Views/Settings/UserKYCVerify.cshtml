@model SecureGroup.ViewModel.UserKYC

@{
    ViewData["Title"] = "UserKYCVerify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="common-title-headeer">
    <h1>KYC Upload</h1>

   @* <ul class="addbtns">
        <li>
            <button class="header-add-btn"><i class="fa fa-check-circle" aria-hidden="true"></i> Verified</button>
        </li>
    </ul>*@
</div>

<div class="form-inner">

  
        
        <div class="row">

            
            <div class="col-md-12 mb-3">
                <div class="custom-form-control d-flex align-items-center gs-3 w-30">
                <label asp-for="AadhaarCard" class="control-label m-0">Aadhaar Card</label>
                    @if (Model.AadhaarCardName == null || Model.AadhaarCardName == "")
                    {
                        <label></label>
                    <i class="fa fa-times no-data-badge" aria-hidden="true"></i>

                }
                    else
                    {
                        <label></label>
                        @Html.ActionLink(" Download", "DownloadFile", new { filename=Model.AadhaarCardName}, new { @class = "btn btn-info fa fa-download",@id="btnAadhaarCardName"})
                    }
                </div>
            </div>
            
            <div class="col-md-12 mb-3">
            <div class="custom-form-control  d-flex align-items-center gs-3 w-30">
                <label asp-for="PanCard" class="control-label m-0">Pan Card</label>
                    @if (Model.PanCardName == null || Model.PanCardName == "")
                    {
                        <label></label>
                    <i class="fa fa-times no-data-badge" aria-hidden="true"></i>
                    }
                    else
                    {
                        <label></label>
                        @Html.ActionLink(" Download", "DownloadFile", new { filename=Model.PanCardName}, new { @class = "btn btn-info fa fa-download",@id="btnPanCardName"})
                    }
                </div>
            </div>
            
            <div class="col-md-12 mb-3">
            <div class="custom-form-control  d-flex align-items-center gs-3 w-30">
                <label asp-for="VoterCard" class="control-label m-0">Voter Card</label>
                    @if (Model.VoterCardName == null || Model.VoterCardName == "")
                    {
                    <i class="fa fa-times no-data-badge"aria-hidden="true"></i>
                    }
                    else
                    {
                        @Html.ActionLink(" Download", "DownloadFile", new { filename=Model.VoterCardName}, new { @class = "btn btn-info fa fa-download",@id="btnVoterCardName"})
                    }
                </div>
            </div>

        <div class="col-md-12 mb-3">
            <div class="custom-form-control  d-flex align-items-center gs-3 w-30">
                <label asp-for="GSTFormName" class="control-label m-0">GST Form</label>
                @if (Model.GSTFormName == null || Model.GSTFormName == "")
                {
                    <i class="fa fa-times no-data-badge" aria-hidden="true"></i>
                }
                else
                {
                    @Html.ActionLink(" Download", "DownloadFile", new { filename=Model.GSTFormName}, new { @class = "btn btn-info fa fa-download",@id="btnGSTFormName"})
                }
            </div>
        </div>

        <div class="col-md-12 mb-3">
            <div class="custom-form-control  d-flex align-items-center gs-3 w-30">
                <label asp-for="VendorFormName" class="control-label m-0">Vendor Form</label>
                @if (Model.VendorFormName == null || Model.VendorFormName == "")
                {
                    <i class="fa fa-times no-data-badge" aria-hidden="true"></i>
                }
                else
                {
                    @Html.ActionLink(" Download", "DownloadFile", new { filename=Model.VendorFormName}, new { @class = "btn btn-info fa fa-download",@id="btnVendorFormName"})
                }
            </div>
        </div>

            <input type="hidden" asp-for="UserId" class="form-control" />
          @*  <input type="submit" value="Verify" class="data-save-btn" />*@
