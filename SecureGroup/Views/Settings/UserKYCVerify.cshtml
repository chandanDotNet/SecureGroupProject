        <li><button class="header-add-btn mt-3"><i class="fa fa-times" aria-hidden="true"></i> <a asp-controller="Settings" asp-action="UpdateKYCVerifyReject" asp-route-Id="@Model.UserId"> Reject</a></button></li>
    </ul>
   
    

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }