@using Microsoft.AspNetCore.Http;
@model IEnumerable<SecureGroup.ViewModel.SiteViewModel>
@{
    ViewData["Title"] = "SitesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- DataTable -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>

<script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>

<!-- End DataTable -->

<ul class="addbtns">
    <li>
        <button class="header-add-btn"  role="button"><i class="fa fa-plus" aria-hidden="true"></i><a asp-controller="Operation" asp-action="AddSites">Add Site</a></button>
    </li>
</ul>
<div class="warehouse-data table-responsive">

    <table id="example">
        <thead>
            <tr>
                <th>SL No.</th>
                <th>Site Name</th>
                <th>Address</th>
                <th>State</th>
                <th>City</th>
                <th>Block</th>
                @*<th>ZipCode</th>*@
                <th>Scheme</th>

                <th></th>
            </tr>

        </thead>

        <tbody>
             @foreach (var item in Model)
                        {
            <tr>
                    <td>@Html.DisplayFor(modelItem => item.SiteId)</td>
                    <td>@Html.DisplayFor(modelItem => item.SiteName)</td>
                <td>
                        @Html.DisplayFor(modelItem => item.Address)                       
                       
                   @* <div class="table-inner-card">
                        <div class="icon">
                            <img src="~/images/registgericon.svg" class="login-logo" alt="">
                        </div>
                        <div class="content">
                            <h3>Construction Project</h3>
                            <p>Site Work</p>
                        </div>
                    </div>*@
                </td>
                    <td>@Html.DisplayFor(modelItem => item.StateName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CityName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Block)</td>
                   @* <td>@Html.DisplayFor(modelItem => item.ZipCode)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Scheme)</td>

              @*  <td>
                    <button class="location-map"><img src="~/images/treasure-map.svg" class="login-logo" alt=""></button>
                </td>*@

                    <td>
                        <div class="dropdown td-action-dot">
                            <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li>@Html.ActionLink("Edit", "EditSites", new { Id=item.SiteId}, new { @class = "dropdown-item"})</li>
                                <li>@Html.ActionLink("Delete", "DeleteSites", new { Id=item.SiteId},new { @class = "dropdown-item"})</li>

                            </ul>
                        </div>
                    </td>
            </tr>
           
            }



        </tbody>
    </table>

    <!-- addwarehouse -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="side-slide-form">
            <div class="side-slide-header">
                <h2>ADD NEW PROJECT</h2>
                <button data-widget="control-sidebar" data-slide="true"><i class="fa fa-times" aria-hidden="true"></i></button>
            </div>



            <form>
                <div class="form-inner">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="custom-form-control">
                                <label>Project</label>
                                <input type="text" placeholder="Construction Project" />
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="custom-form-control">
                                <label>Site Name</label>
                                <input type="text" placeholder="Site Name" />
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="custom-form-control">
                                <label>Postal Address</label>
                                <textarea placeholder="Postal Address">
                                </textarea>
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <div class="custom-form-control">
                                <label>Landmark</label>
                                <input type="text" placeholder="Landmark" />
                            </div>
                        </div>


                        <div class="col-md-6 mb-3">
                            <div class="custom-form-control">
                                <label>City</label>
                                <select name="" id="">
                                    <option value="" disabled selected hidden>City</option>
                                    <option value="a">Project Head</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="custom-form-control">
                                <label>Pin Code</label>
                                <select name="" id="">
                                    <option value="" disabled selected hidden>Pin Code</option>
                                    <option value="a">Project Head</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="custom-form-control">
                                <label>Region</label>
                                <select name="" id="">
                                    <option value="" disabled selected hidden>Region</option>
                                    <option value="a">Project Head</option>
                                </select>
                            </div>
                        </div>


                        <div class="col-md-6 mb-3">
                            <div class="custom-form-control">
                                <label>State</label>
                                <select name="" id="">
                                    <option value="" disabled selected hidden>State</option>
                                    <option value="a">Project Head</option>
                                </select>
                            </div>
                        </div>


                        <div class="col-md-12 mb-3">
                            <div class="custom-form-control">
                                <label>Site Manager</label>
                                <select name="" id="">
                                    <option value="" disabled selected hidden>Site Manager</option>
                                    <option value="a">Project Head</option>
                                </select>
                            </div>
                        </div>





                    </div>

                </div>

                <button class="data-save-btn">Save</button>
            </form>



        </div>
    </aside>



</div>

<script type="text/javascript">
    //new DataTable('#example');
    $('#example').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    });

</script>