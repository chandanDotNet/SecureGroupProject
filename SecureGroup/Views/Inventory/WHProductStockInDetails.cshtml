@model IEnumerable<SecureGroup.ViewModel.WHProductPurchaseInOutDetailsViewModel>
@{
    ViewData["Title"] = "WHProductStockInDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTable -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>

<script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>

<!-- End DataTable -->

<div class="warehouse-data table-responsive">
    <table id="example">
        <thead>
            <tr>

                <th>
                    Product Name
                </th>
                <th>
                    SubProduct Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Transfer Type
                </th>
                <th>
                    Transfer Details
                </th>
                <th>
                    Transfer Date
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransferType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransferDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteWHProductStockInDetails", new {Id=item.Id, WareHouseId=item.WareHouseId,ProductId=item.ProductId,SubProductId=item.SubProductId},new { @class = "view-td-details fa fa-delete"})
                    </td>

                </tr>
            }
            <tr><td></td><td></td><td>Total- @Model.Sum(i => i.ProductQty)</td><td></td></tr>
        </tbody>
    </table>

</div>

<script>
    $('#example').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copyHtml5',
            'excelHtml5',
            'csvHtml5',
            'pdfHtml5'
        ]
    });
</script>