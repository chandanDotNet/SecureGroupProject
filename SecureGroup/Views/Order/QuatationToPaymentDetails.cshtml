@model SecureGroup.ViewModel.QuatationToPaymentDetailsViewModel

@{
    ViewData["Title"] = "QuatationToPaymentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="common-title-headeer">
    <h1>Quotation To Payment Details</h1>
    <ul class="addbtns">
        <li>
            <button class="header-add-btn"><i class="fa fa-arrow-left" aria-hidden="true"></i><a asp-controller="Order" asp-action="QuatationToPayment">Back</a></button>
        </li>
    </ul>
</div>



<div class="row">
    <div class="col-lg-12">
        <div id="partial-taskDetails-load">
            <div class="tasklist-assing-update divHS">
                <label class="control-label">Name</label>
                <input asp-for="UserName" class="form-control" type="text" readonly />
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-12">
        <div id="partial-taskDetails-load">
            <div class="tasklist-assing-update divHS">

                <form asp-action="AddQuatation" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-1">
                            <label class="control-label">Step:</label>
                            <label class="btn btn-info">1</label>
                        </div>
                        <div class="col-md-1">
                            <label class="control-label">Status</label>
                            @if (Model.IsQuatationComplete == true)
                            {
                                <img src="~/images/check.png" height="20" width="20" />
                            }
                            else
                            {
                                <img src="~/images/remove.png" height="20" width="20" />
                            }
                        </div>
                        <div class="col-md-3">
                            <div class="custom-form-control">
                                <label class="control-label">Upload Quotation File</label>
                                <input asp-for="QuatationFile" class="form-control-file" type="file" />
                                <input asp-for="QuatationToPaymentId" type="hidden" />
                                <input asp-for="QuatationFileName" type="hidden" />
                                <span asp-validation-for="QuatationFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="custom-form-control">
                                <label class="control-label">Quatation Amount</label>
                                <input asp-for="QuatationAmount" type="text" class="form-control" />
                                <span asp-validation-for="QuatationAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <input id="btnSave" type="submit" value="Upload" class="data-save-btn" />
                        </div>
                        <div class="col-md-2">
                            <div class="custom-form-control">
                                <label asp-for="QuatationFile" class="control-label">Download File</label>
                                @Html.ActionLink("Download", "DownloadQuatationFile", new { filename=Model.QuatationFileName}, new { @class = "btn btn-info fa fa-download",@id="btnDownload"})
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-12">
        <div id="partial-taskDetails-load">
            <div class="tasklist-assing-update divHS">
                <div class="row">
                    <div class="col-md-1">
                        <label class="control-label">Step:</label>
                        <label class="btn btn-info">2</label>
                    </div>
                    <div class="col-md-1">
                        <label class="control-label">Status</label>
                        @if (Model.IsPOComplete == true)
                        {
                            <img src="~/images/check.png" height="20" width="20" />
                        }
                        else
                        {
                            <img src="~/images/remove.png" height="20" width="20" />
                        }
                    </div>
                    <div class="col-md-5">
                        <div class="custom-form-control">
                            <label class="control-label">PURCHASE ORDER ID</label>
                            <input asp-for="POId" class="form-control" type="text" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        @if (Model.POId > 0)
                        {
                            <label class="control-label">GENERATE PDF </label>
                            @Html.ActionLink("Download", "GeneratePurchaseOrderPdf", new { PurchaseOrderId=Model.POId}, new { @class = "btn btn-info fa fa-download",@id="btnDownload"})
                        }
                    </div>
                    <div class="col-md-3">
                        <div class="custom-form-control">
                            <label class="control-label">EDIT PURCHASE ORDER </label>
                            @Html.ActionLink("Edit", "AddPOQuatationToPayment", new { Id=Model.UserId, POId=Model.POId,QuatationToPaymentId=Model.QuatationToPaymentId}, new { @class = "btn btn-info fa fa-edit",@id="btnDownload"})
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



