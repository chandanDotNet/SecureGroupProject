@model SecureGroup.ViewModel.QuatationToPaymentDetailsViewModel

@{
    ViewData["Title"] = "AddQuatationToPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="common-title-headeer">
    <h1> Add Quotation To Payment</h1>


</div>


<div class="form-inner">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddQuatationToPayment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              
                <input asp-for="QuatationToPaymentId" class="form-control QuatationToPaymentId" type="hidden" />
                <div class="col-md-12 mb-3">
                    <div class="custom-form-control">
                        <label asp-for="UserId" class="control-label">Vendor Name</label>
                        <select asp-for="UserId" id="UserId"
                                class="form-control"
                                asp-items="@(new SelectList(Model.VendorList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="custom-form-control">
                        <label asp-for="Date" class="control-label">Date</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" value="Create" class="data-save-btn" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
