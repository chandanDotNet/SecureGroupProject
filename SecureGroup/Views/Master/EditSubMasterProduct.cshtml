@model SecureGroup.ViewModel.SubProductMasterViewModel

@{
    ViewData["Title"] = "EditSubMasterProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="common-title-headeer">
    <h1>Edit Sub Master Product</h1>

    <ul class="addbtns">
        <li>
            <button class="header-add-btn"><i class="fa fa-arrow-left" aria-hidden="true"></i><a asp-controller="Master" asp-action="SubMasterProductList">SUB PRODUCT LIST</a></button>
        </li>
    </ul>
</div>

<div class="form-inner">
    <div class="row">
        <form asp-action="EditSubMasterProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="SubProductId" class="form-control" type="hidden" />
            <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="ProductId" class="control-label">Product<span>*</span></label>
                    <select asp-for="ProductId" id="ddlProductList"
                            class="form-control"
                            asp-items="@(new SelectList(Model.ProductList,"Value", "Text"))">
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="SubProductName" class="control-label">SubProduct Name<span>*</span></label>
                    <input asp-for="SubProductName" class="form-control" />
                    <span asp-validation-for="SubProductName" class="text-danger"></span>
                </div>
            </div>          

            <div class="col-md-12 mb-3">
                <div class="custom-form-control">
                    <label asp-for="UnitId" class="control-label">UOM<span>*</span></label>
                    <select asp-for="UnitId" id="ddlUnitList"
                            class="form-control"
                            asp-items="@(new SelectList(Model.UnitList,"Value", "Text"))">
                    </select>
                    <span asp-validation-for="UnitId" class="text-danger"></span>
                </div>
            </div>           
                <input type="submit" value="Update" class="data-save-btn" />
            
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
